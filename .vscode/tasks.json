{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure OpenQ4 (Meson Debug)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\tools\\build\\meson_setup.ps1",
        "setup",
        "--wipe",
        "${workspaceFolder}\\build_meson",
        "${workspaceFolder}",
        "--backend",
        "ninja",
        "--buildtype",
        "debug",
        "--wrap-mode=forcefallback"
      ],
      "problemMatcher": []
    },
    {
      "label": "Build OpenQ4 (Meson Debug)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\tools\\build\\meson_setup.ps1",
        "compile",
        "-C",
        "${workspaceFolder}\\build_meson"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$msCompile"
      ]
    },
    {
      "label": "Build OpenQ4 (CMake Debug)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}\\build_debug",
        "--config",
        "Debug"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": [
        "$msCompile"
      ]
    }
  ]
}
